<hibernate-mapping schema="realestatebroker">
    <class name="pl.edu.agh.iosr.realestatebroker.model.EstateOffer" table="house_offer">
        <meta attribute="extends">Abstract</meta>
        <id name="id" column="id"  type="int">
            <generator class="native" />
        </id>

        <property column="title" name="title" length="50" type="string" />
        <property column="description" length="1024" name="description" type="string" />
        <component name="owner" class="User"/>
        <property column="total_area" name="totalArea" type="short" />
        <property column="living_area" name="livingArea" type="short" />
        <property column="front_yard_area" not-null="false" name="frontYardArea" type="short" />
        <property column="back_yard_area" not-null="false" name="backYardArea" type="short" />
        <property column="number_of_bedrooms" name="numberOfBedrooms" type="short" />
        <property column="number_of_floors" name="numberOfFloors" type="short" />
        <property column="garage_for_cars" not-null="false" name="garageForCars" type="short" />
        <property column="seperate_kitchen" name="seperateKitchen" type="yes/no" />
        <property column="ctime" name="creationTime" type="timestamp" />
        <property column="valid_until" not-null="false" name="validUntilDate" type="timestamp" />
    </class>
</hibernate-mapping>