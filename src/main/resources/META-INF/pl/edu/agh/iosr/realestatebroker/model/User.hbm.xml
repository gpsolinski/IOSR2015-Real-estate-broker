<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping schema="realestatebroker">
    <class name="pl.edu.agh.iosr.realestatebroker.model.User" table="user">
        <meta attribute="extends">Abstract</meta>
        <id name="id" column="user_id"  type="int">
            <generator class="native" />
        </id>

        <property column="login" name="login" length="20" type="string" />
        <property column="first_name" length="35" name="firstName" type="string" />
        <property column="last_name" length="35" name="lastName" type="string" />
        <property column="email" length="60" name="email" type="string" />
        <property column="phone" length="35" name="phoneNumber" type="string" />
    </class>
</hibernate-mapping>